{
    "name": "chadicus/slim-oauth2-routes",
    "description": "OAuth2 routes for use within a Slim Framework API",
    "keywords": ["slim", "oauth2", "routing"],
    "authors": [
        {
            "name": "Chad Gray",
            "email": "chadwickgray@gmail.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/tchapi/slim-oauth2-http"
        }
      ],
    "license": "MIT",
    "require": {
        "php": "^7.0 || ^8.0",
        "bshaffer/oauth2-server-php": "^1.9",
        "chadicus/slim-oauth2-http": "dev-next"
    },
    "suggest": {
        "chadicus/slim-oauth2-middleware": "Adds OAuth2 middleware for API requests.",
        "slim/php-view": "Simple template rendering"
    },
    "config" : {
        "sort-packages": true
    },
    "require-dev": {
        "chadicus/coding-standard": "^1.8",
        "php-coveralls/php-coveralls": "^2.5",
        "phpunit/phpunit": "^8.5",
        "slim/php-view": "^2.0.5",
        "zendframework/zend-diactoros": ">=1.3.2"
    },
    "autoload": {
        "psr-4": {"Chadicus\\Slim\\OAuth2\\Routes\\" : "src"}
    },
    "autoload-dev": {
        "psr-4": {"ChadicusTest\\Slim\\OAuth2\\Routes\\" : "tests"}
    }
}
